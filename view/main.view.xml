<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="testcamera.view.main">
	<Page title="Camera Test">
		<content><HBox width="100%" id="__hbox0" justifyContent="Center">
		        <items>
		            <Button text="Take a photo" width="150px" id="__button0" press="capturePhoto"/>
		            <Button text="Send by email" width="150px" id="__button2" press="EmailSend"/>
		            <Button text="Pick from Gallery" width="150px" id="__button1" press="getphoto"/>
		        </items>
		    </HBox>
		    <HBox width="100%" id="__hbox1" justifyContent="Center">
		    	  <Image width="200px" height="200px" id="myImage" src=""/>
		    </HBox>
		    <HBox width="100%" id="__hbox2" visible="false">
		        <items>
		            <Label width="100%" text="Latitude"/>
		            <Text text="Calculating" id="txtLatitude"/>
		        </items>
		    </HBox>
		    <HBox width="100%" id="__hbox3" visible="false">
		        <items>
		            <Label text="Longitude" width="100%"/>
		            <Text text="Calculating" id="txtLongitude"/>
		        </items>
		    </HBox>
		    <HBox width="100%" id="__hbox4" visible="false">
		        <items>
		            <Label width="100%" text=" Altitude"/>
		            <Text text="Calculating" id="txtAltitude"/>
		        </items>
		    </HBox>
		   
		</content>
	</Page>
</core:View>